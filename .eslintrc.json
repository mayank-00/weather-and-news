{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error"
        ]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "models",
                        "./src/models"
                    ],
                    [
                        "middlewares",
                        "./src/middlewares"
                    ],
                    [
                        "routes",
                        "./src/routes"
                    ],
                    [
                        "config",
                        "./src/config"
                    ],
                    [
                        "core",
                        "./src/core"
                    ],
                    [
                        "errors",
                        "./src/core/errors"
                    ],
                    [
                        "response",
                        "./src/core/apiResponse/successResponse"
                    ],
                    [
                        "library",
                        "./src/library"
                    ],
                    [
                        "logger",
                        "./src/core/logger"
                    ],
                    [
                        "controllers",
                        "./src/controllers"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".json"
                ]
            }
        }
    }
}